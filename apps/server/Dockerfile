# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build @org/server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t org-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system org-server && \
          adduser --system -G org-server org-server

COPY apps/server/dist org-server/
COPY apps/server/package.json org-server/
RUN chown -R org-server:org-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix org-server --omit=dev -f install

CMD [ "node", "org-server" ]
